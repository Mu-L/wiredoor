{
  "name": "Wiredoor Dev Container",
  "image": "ghcr.io/wiredoor/dev-container:latest",
  "overrideCommand": false,
  "workspaceFolder": "/workspaces/wiredoor",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "orta.vscode-jest"
      ],
      "settings": {
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.formatOnSave": true,
        "eslint.validate": ["typescript", "javascript", "vue"]
      }
    }
  },
  "mounts": [
    "type=volume,source=wiredoor_api_node_modules,target=/workspaces/wiredoor/api/node_modules",
    "type=volume,source=wiredoor_ui_node_modules,target=/workspaces/wiredoor/ui/node_modules",
    "type=volume,source=wiredoor_node_modules,target=/workspaces/wiredoor/node_modules"
  ],
  "postCreateCommand": "npm install --recursive",
  "remoteUser": "root",
  "capAdd": [ "NET_ADMIN" ]
}